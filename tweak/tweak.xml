<?xml version="1.0"?>
<tweaks>
	<tweak version="2" name="settings/camera_shakes" extension="camera_shakes">
		<search>
			<camera_shakes/>
			<shake name="player_bullet_damage"/>
		</search>
		<target mode="replace">
			<shake name="player_bullet_damage" spin="0" roll="0" tilt="0.05" frequency="1" amplitude="1" attack="0" sustain="0" decay="0.5"/>
		</target>
	</tweak>

	<tweak version="2" name="settings/camera_shakes" extension="camera_shakes">
		<search>
			<camera_shakes/>
			<shake name="melee_hit"/>
		</search>
		<target mode="append">
			<shake name="melee_hit_spooc_var1" spin="sin(t/2)*0.75" roll="sin(t)" tilt="sin(t/2)*0.5" frequency="10" amplitude="1.0" attack="0" sustain="0" decay="1.5"/>
			<shake name="melee_hit_spooc_var2" spin="-sin(t/2)*0.75" roll="sin(t)" tilt="sin(t/2)*0.5" frequency="10" amplitude="1.0" attack="0" sustain="0" decay="1.5"/>
			<shake name="melee_hit_spooc_var3" spin="sin(t/2)*0.75" roll="-sin(t)" tilt="sin(t/2)*0.5" frequency="10" amplitude="1.0" attack="0" sustain="0" decay="1.5"/>
			<shake name="melee_hit_spooc_var4" spin="-sin(t/2)*0.75" roll="-sin(t)" tilt="sin(t/2)*0.5" frequency="10" amplitude="1.0" attack="0" sustain="0" decay="1.5"/>
		</target>
	</tweak>
</tweaks>